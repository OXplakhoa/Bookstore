@model Bookstore.ViewModels.Admin.ProductFormViewModel
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input asp-for="ProductId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span class="input-group-text">₫</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Author" class="form-label"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @if (Model.ExistingImages.Any())
            {
                <div class="mb-3">
                    <label class="form-label">Hình ảnh hiện tại</label>
                    <div class="row">
                        @for (int i = 0; i < Model.ExistingImages.Count; i++)
                        {
                            <div class="col-md-3 mb-2">
                                <div class="position-relative">
                                    <img src="@Model.ExistingImages[i].ImageUrl" class="img-thumbnail" style="width: 100%; height: 120px; object-fit: cover;" />
                                    @if (Model.ExistingImages[i].IsMain)
                                    {
                                        <span class="badge bg-primary position-absolute top-0 start-0">Chính</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="mb-3">
                <label asp-for="ImageFiles" class="form-label">Thêm hình ảnh mới</label>
                <input asp-for="ImageFiles" class="form-control" type="file" multiple accept="image/*" />
                <div class="form-text">Chọn nhiều hình ảnh mới (JPG, PNG, GIF)</div>
                <span asp-validation-for="ImageFiles" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MainImageIndex" class="form-label"></label>
                <input asp-for="MainImageIndex" class="form-control" type="number" min="0" />
                <div class="form-text">Nhập số thứ tự hình ảnh mới muốn làm hình chính (bắt đầu từ 0)</div>
                <span asp-validation-for="MainImageIndex" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Cập nhật sản phẩm
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Hướng dẫn</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-info-circle text-primary"></i> Tất cả các trường có dấu * là bắt buộc</li>
                    <li><i class="bi bi-image text-primary"></i> Hình ảnh cũ sẽ được giữ nguyên</li>
                    <li><i class="bi bi-plus-circle text-primary"></i> Có thể thêm hình ảnh mới</li>
                    <li><i class="bi bi-star text-primary"></i> Hình ảnh chính sẽ hiển thị đầu tiên</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

