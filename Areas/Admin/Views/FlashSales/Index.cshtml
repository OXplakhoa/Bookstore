@* filepath: f:\code\NET\Bookstore\Areas\Admin\Views\FlashSales\Index.cshtml *@
@model IEnumerable<Bookstore.ViewModels.Admin.FlashSaleViewModel>

@{
    ViewData["Title"] = "Quản lý Flash Sales";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="bi bi-lightning-charge-fill text-warning"></i> 
            Quản lý Flash Sales
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo Flash Sale mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="mt-3 text-muted">Chưa có Flash Sale nào. Hãy tạo Flash Sale đầu tiên!</p>
                    <a asp-action="Create" class="btn btn-primary">Tạo Flash Sale</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Tên Flash Sale</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                                <th>Sản phẩm</th>
                                <th class="text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@item.Description</small>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <i class="bi bi-calendar-event text-primary"></i>
                                            <small>@item.StartDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <div>
                                            <i class="bi bi-calendar-check text-danger"></i>
                                            <small>@item.EndDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        @if (item.IsCurrentlyActive && item.TimeRemaining.TotalHours > 0)
                                        {
                                            <div class="mt-1">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-clock"></i>
                                                    Còn @item.TimeRemaining.Days ngày @item.TimeRemaining.Hours giờ
                                                </span>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="@item.StatusBadgeClass">@item.Status</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            @item.ProductCount sản phẩm
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.FlashSaleId" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ManageProducts" asp-route-id="@item.FlashSaleId" 
                                               class="btn btn-sm btn-outline-success" 
                                               title="Quản lý sản phẩm">
                                                <i class="bi bi-box-seam"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.FlashSaleId" 
                                               class="btn btn-sm btn-outline-warning" 
                                               title="Chỉnh sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="ToggleActive" asp-route-id="@item.FlashSaleId" 
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-@(item.IsActive ? "secondary" : "success")" 
                                                        title="@(item.IsActive ? "Vô hiệu hóa" : "Kích hoạt")">
                                                    <i class="bi bi-@(item.IsActive ? "pause" : "play")-circle"></i>
                                                </button>
                                            </form>
                                            <form asp-action="Delete" asp-route-id="@item.FlashSaleId" 
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa (vô hiệu hóa) Flash Sale này?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-danger" 
                                                        title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh page every 60 seconds to update countdown timers
        setTimeout(function() {
            location.reload();
        }, 60000);
    </script>
}