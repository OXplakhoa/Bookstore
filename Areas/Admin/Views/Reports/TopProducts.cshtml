@model List<Bookstore.Models.Dtos.TopSellingProductDto>
@{
    ViewData["Title"] = "Top sản phẩm bán chạy";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var count = (int)ViewBag.Count;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-star text-success"></i> Top sản phẩm bán chạy
    </h1>
    <a href="@Url.Action("Index", "Reports")" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại báo cáo
    </a>
</div>

<!-- Filter -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="count" class="col-form-label">Số lượng hiển thị:</label>
            </div>
            <div class="col-auto">
                <select name="count" id="count" class="form-select">
                    @{
                        var counts = new[] { 5, 10, 20, 50 };
                        foreach (var c in counts)
                        {
                            <option value="@c" selected="@(count == c)">Top @c</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter"></i> Lọc
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng đã bán</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Sum(p => p.TotalSold) sản phẩm</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng doanh thu</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Sum(p => p.TotalRevenue).ToString("N0")₫</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Số sản phẩm</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count sản phẩm</div>
            </div>
        </div>
    </div>
</div>

<!-- Products Table -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Top @count sản phẩm bán chạy</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 60px;">Hạng</th>
                            <th>Sản phẩm</th>
                            <th>Danh mục</th>
                            <th class="text-end">Giá</th>
                            <th class="text-center">Đã bán</th>
                            <th class="text-end">Doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var rank = 1; }
                        @foreach (var product in Model)
                        {
                            var rankClass = rank switch
                            {
                                1 => "bg-warning text-dark",
                                2 => "bg-secondary",
                                3 => "bg-info",
                                _ => "bg-light text-dark"
                            };
                            <tr>
                                <td class="text-center">
                                    <span class="badge @rankClass fs-6">@rank</span>
                                </td>
                                <td>
                                    <strong>@product.Title</strong>
                                    <br /><small class="text-muted">@product.Author</small>
                                </td>
                                <td>@product.CategoryName</td>
                                <td class="text-end">@product.Price.ToString("N0")₫</td>
                                <td class="text-center">
                                    <span class="badge bg-success">@product.TotalSold</span>
                                </td>
                                <td class="text-end font-weight-bold">@product.TotalRevenue.ToString("N0")₫</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="4" class="text-end"><strong>Tổng cộng:</strong></td>
                            <td class="text-center"><strong>@Model.Sum(p => p.TotalSold)</strong></td>
                            <td class="text-end"><strong>@Model.Sum(p => p.TotalRevenue).ToString("N0")₫</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3 text-muted">Chưa có dữ liệu bán hàng</h5>
            </div>
        }
    </div>
</div>
