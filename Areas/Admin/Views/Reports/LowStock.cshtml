@model List<Bookstore.Models.Dtos.LowStockProductDto>
@{
    ViewData["Title"] = "Sản phẩm sắp hết hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var threshold = (int)ViewBag.Threshold;
    var criticalCount = (int)ViewBag.CriticalCount;
    var warningCount = (int)ViewBag.WarningCount;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-exclamation-triangle text-danger"></i> Sản phẩm sắp hết hàng
    </h1>
    <a href="@Url.Action("Index", "Reports")" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại báo cáo
    </a>
</div>

<!-- Filter -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lọc theo ngưỡng tồn kho</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="threshold" class="col-form-label">Ngưỡng cảnh báo:</label>
            </div>
            <div class="col-auto">
                <select name="threshold" id="threshold" class="form-select" onchange="this.form.submit()">
                    @{
                        var thresholds = new[] { 5, 10, 20, 50 };
                        foreach (var t in thresholds)
                        {
                            <option value="@t" selected="@(threshold == t)">≤ @t sản phẩm</option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Cần nhập hàng gấp (≤5)</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@criticalCount sản phẩm</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Cần chú ý (>5)</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@warningCount sản phẩm</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng số</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count sản phẩm</div>
            </div>
        </div>
    </div>
</div>

<!-- Products Table -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm (Tồn kho ≤ @threshold)</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Danh mục</th>
                            <th class="text-center">Tồn kho</th>
                            <th class="text-end">Giá</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            var stockClass = product.Stock <= 5 ? "bg-danger" : "bg-warning text-dark";
                            var statusText = product.Stock == 0 ? "Hết hàng" : (product.Stock <= 5 ? "Cần nhập gấp" : "Cần chú ý");
                            <tr>
                                <td>
                                    <strong>@product.Title</strong>
                                    <br /><small class="text-muted">@product.Author</small>
                                </td>
                                <td>@product.CategoryName</td>
                                <td class="text-center">
                                    <span class="badge @stockClass fs-6">@product.Stock</span>
                                </td>
                                <td class="text-end">@product.Price.ToString("N0")₫</td>
                                <td class="text-center">
                                    @if (product.Stock == 0)
                                    {
                                        <span class="badge bg-dark">Hết hàng</span>
                                    }
                                    else if (product.Stock <= 5)
                                    {
                                        <span class="badge bg-danger">Cần nhập gấp</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Cần chú ý</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.ProductId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                <h5 class="mt-3 text-success">Tất cả sản phẩm đều đủ hàng!</h5>
                <p class="text-muted">Không có sản phẩm nào có tồn kho ≤ @threshold</p>
            </div>
        }
    </div>
</div>
