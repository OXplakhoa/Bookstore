@model List<Bookstore.Models.Dtos.TopCustomerDto>
@{
    ViewData["Title"] = "Khách hàng VIP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var count = (int)ViewBag.Count;
    var totalSpent = (decimal)ViewBag.TotalSpent;
    var totalOrders = (int)ViewBag.TotalOrders;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-people text-warning"></i> Khách hàng VIP
    </h1>
    <a href="@Url.Action("Index", "Reports")" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại báo cáo
    </a>
</div>

<!-- Filter -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="count" class="col-form-label">Số lượng hiển thị:</label>
            </div>
            <div class="col-auto">
                <select name="count" id="count" class="form-select">
                    @{
                        var counts = new[] { 5, 10, 20, 50 };
                        foreach (var c in counts)
                        {
                            <option value="@c" selected="@(count == c)">Top @c</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter"></i> Lọc
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Tổng chi tiêu</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@totalSpent.ToString("N0")₫</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng đơn hàng</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@totalOrders đơn</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Chi tiêu trung bình</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">
                    @(totalOrders > 0 ? (totalSpent / totalOrders).ToString("N0") : "0")₫/đơn
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Customers Table -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Top @count khách hàng VIP</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 60px;">Hạng</th>
                            <th>Khách hàng</th>
                            <th class="text-center">Số đơn hàng</th>
                            <th class="text-end">Tổng chi tiêu</th>
                            <th class="text-center">Chi tiêu TB/đơn</th>
                            <th class="text-center">Đơn gần nhất</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var rank = 1; }
                        @foreach (var customer in Model)
                        {
                            var rankClass = rank switch
                            {
                                1 => "bg-warning text-dark",
                                2 => "bg-secondary",
                                3 => "bg-info",
                                _ => "bg-light text-dark"
                            };
                            var avgSpent = customer.OrderCount > 0 ? customer.TotalSpent / customer.OrderCount : 0;
                            <tr>
                                <td class="text-center">
                                    @if (rank <= 3)
                                    {
                                        <span class="badge @rankClass fs-6">
                                            @if (rank == 1) { <i class="bi bi-trophy"></i> }
                                            @rank
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">@rank</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2">
                                            @(customer.FullName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                        </div>
                                        <div>
                                            <strong>@(customer.FullName ?? "N/A")</strong>
                                            <br /><small class="text-muted">@customer.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@customer.OrderCount</span>
                                </td>
                                <td class="text-end">
                                    <strong class="text-success">@customer.TotalSpent.ToString("N0")₫</strong>
                                </td>
                                <td class="text-center text-muted">
                                    @avgSpent.ToString("N0")₫
                                </td>
                                <td class="text-center">
                                    <small>@customer.LastOrderDate.ToString("dd/MM/yyyy")</small>
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="2" class="text-end"><strong>Tổng cộng:</strong></td>
                            <td class="text-center"><strong>@totalOrders</strong></td>
                            <td class="text-end"><strong>@totalSpent.ToString("N0")₫</strong></td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3 text-muted">Chưa có dữ liệu khách hàng</h5>
                <p class="text-muted">Chưa có khách hàng nào đặt hàng</p>
            </div>
        }
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }
</style>
