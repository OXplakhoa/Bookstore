@model IEnumerable<Bookstore.ViewModels.Admin.CategoryFormViewModel>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Toolbar {
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Thêm danh mục
    </a>
}

<!-- Categories Card -->
<div class="admin-card">
    <div class="admin-card-header d-flex justify-content-between align-items-center">
        <h5 class="admin-card-title mb-0">
            <i class="bi bi-tags me-2"></i>Danh sách danh mục
        </h5>
        <span class="badge bg-primary">@Model.Count() danh mục</span>
    </div>
    <div class="admin-card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover admin-table mb-0">
                    <thead>
                        <tr>
                            <th>Tên danh mục</th>
                            <th>Slug (URL)</th>
                            <th>Mô tả</th>
                            <th class="text-center">Số sản phẩm</th>
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="category-icon me-3">
                                            <i class="bi bi-folder"></i>
                                        </div>
                                        <strong class="text-dark">@category.Name</strong>
                                    </div>
                                </td>
                                <td>
                                    <code class="bg-light px-2 py-1 rounded">@category.Slug</code>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(category.Description))
                                    {
                                        <span class="text-muted">@(category.Description.Length > 60 ? category.Description.Substring(0, 60) + "..." : category.Description)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Chưa có mô tả</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info rounded-pill">@category.ProductCount sản phẩm</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@category.CategoryId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa"
                                                    onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này? Hành động này không thể hoàn tác!')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-folder-plus" style="font-size: 4rem; color: #dee2e6;"></i>
                </div>
                <h4 class="text-muted">Chưa có danh mục nào</h4>
                <p class="text-muted mb-4">Hãy tạo danh mục đầu tiên để bắt đầu phân loại sản phẩm.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Thêm danh mục đầu tiên
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
<style>
    .category-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.1rem;
    }
</style>
}

