@model Bookstore.ViewModels.Admin.CategoryFormViewModel
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input asp-for="CategoryId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Slug" class="form-label"></label>
                <input asp-for="Slug" class="form-control" />
                <div class="form-text">Slug sẽ được tự động cập nhật từ tên danh mục nếu để trống</div>
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Cập nhật danh mục
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Thông tin danh mục</h5>
            </div>
            <div class="card-body">
                <p><strong>Số sản phẩm:</strong> @Model.ProductCount</p>
                <p><strong>Slug hiện tại:</strong> <code>@Model.Slug</code></p>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <strong>Lưu ý:</strong> Thay đổi tên danh mục có thể ảnh hưởng đến URL của các sản phẩm trong danh mục này.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

