@model Bookstore.ViewModels.Admin.CategoryFormViewModel
@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4">
    <div class="col-lg-7">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="admin-card-title mb-0">
                    <i class="bi bi-plus-circle me-2"></i>Thông tin danh mục
                </h5>
            </div>
            <div class="admin-card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
                            <label asp-for="Name"><i class="bi bi-tag me-1"></i>Tên danh mục *</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Slug" class="form-control" placeholder="ten-danh-muc" />
                            <label asp-for="Slug"><i class="bi bi-link-45deg me-1"></i>Slug (URL)</label>
                            <span asp-validation-for="Slug" class="text-danger small"></span>
                        </div>
                        <small class="text-muted">Để trống để tự động tạo từ tên danh mục</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label"><i class="bi bi-file-text me-1"></i>Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả ngắn gọn về danh mục..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle me-2"></i>Tạo danh mục
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-5">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="admin-card-title mb-0">
                    <i class="bi bi-lightbulb me-2"></i>Hướng dẫn
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="d-flex align-items-start mb-3">
                    <i class="bi bi-check-circle-fill text-success me-3 mt-1"></i>
                    <div>
                        <strong>Tên danh mục</strong>
                        <p class="text-muted mb-0 small">Đặt tên ngắn gọn, dễ hiểu. Ví dụ: "Sách văn học", "Sách kinh tế"</p>
                    </div>
                </div>
                <div class="d-flex align-items-start mb-3">
                    <i class="bi bi-link-45deg text-primary me-3 mt-1"></i>
                    <div>
                        <strong>Slug URL</strong>
                        <p class="text-muted mb-0 small">Sử dụng trong đường dẫn website. Ví dụ: sach-van-hoc</p>
                    </div>
                </div>
                <div class="d-flex align-items-start mb-3">
                    <i class="bi bi-file-text text-info me-3 mt-1"></i>
                    <div>
                        <strong>Mô tả</strong>
                        <p class="text-muted mb-0 small">Giúp khách hàng hiểu rõ hơn về loại sách trong danh mục</p>
                    </div>
                </div>
                <div class="d-flex align-items-start">
                    <i class="bi bi-book text-warning me-3 mt-1"></i>
                    <div>
                        <strong>Thêm sản phẩm</strong>
                        <p class="text-muted mb-0 small">Sau khi tạo, bạn có thể gán sản phẩm vào danh mục này</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

