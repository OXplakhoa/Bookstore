@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đăng ký";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="font-weight-light text-light my-1">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check text-success" style="font-size: 3rem;"></i>
                    </div>
                    @{
                        if (@Model.DisplayConfirmAccountLink)
                        {
                            <p class="lead">
                                Ứng dụng đang chạy ở chế độ Development.
                            </p>
                            <p>
                                Thông thường email sẽ được gửi đi. <br/>
                                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary mt-3">Nhấn vào đây để xác nhận tài khoản</a>
                            </p>
                        }
                        else
                        {
                            <p class="lead">
                                Vui lòng kiểm tra email của bạn để xác nhận tài khoản.
                            </p>
                            <p class="text-muted small">
                                Nếu không thấy email, hãy kiểm tra thư mục Spam.
                            </p>
                        }
                    }
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-page="./Login">Quay lại trang đăng nhập</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

