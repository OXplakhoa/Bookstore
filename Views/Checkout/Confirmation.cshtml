@model Bookstore.ViewModels.OrderConfirmationViewModel
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>
                        Đặt hàng thành công!
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h5 class="alert-heading">Cảm ơn bạn đã đặt hàng!</h5>
                        <p class="mb-0">Đơn hàng của bạn đã được tiếp nhận và đang được xử lý. Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất.</p>
                    </div>

                    <!-- Order Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Mã đơn hàng</h6>
                            <p class="fw-bold fs-5">@Model.OrderNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Ngày đặt hàng</h6>
                            <p class="fw-bold">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    <!-- Payment Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Phương thức thanh toán</h6>
                            <p class="fw-bold">
                                @if (Model.PaymentMethod == "COD")
                                {
                                    <i class="fas fa-money-bill-wave me-2"></i>@("Thanh toán khi nhận hàng")
                                }
                                else if (Model.PaymentMethod == "Stripe")
                                {
                                    <i class="fas fa-credit-card me-2"></i>@("Thanh toán online")
                                }
                                else
                                {
                                    @Model.PaymentMethod
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Trạng thái thanh toán</h6>
                            <p class="fw-bold">
                                @if (Model.PaymentStatus == "Paid" || Model.PaymentStatus == "Completed")
                                {
                                    <span class="badge bg-success">Đã thanh toán</span>
                                }
                                else if (Model.PaymentStatus == "COD")
                                {
                                    <span class="badge bg-warning">Chờ thanh toán</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.PaymentStatus</span>
                                }
                            </p>
                        </div>
                    </div>

                    <!-- Shipping Information -->
                    <div class="mb-4">
                        <h6 class="text-muted">Thông tin giao hàng</h6>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-1"><strong>@Model.ShippingName</strong></p>
                            <p class="mb-1">@Model.ShippingPhone</p>
                            <p class="mb-1">@Model.ShippingEmail</p>
                            <p class="mb-0">@Model.ShippingAddress</p>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="mb-4">
                        <h6 class="text-muted">Sản phẩm đã đặt</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-end">Đơn giá</th>
                                        <th class="text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.ProductImageUrl" alt="@item.ProductTitle" class="me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                    <div>
                                                        <div class="fw-bold">@item.ProductTitle</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">@item.UnitPrice.ToString("N0") ₫</td>
                                            <td class="text-end fw-bold">@item.Total.ToString("N0") ₫</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-light">
                                        <th colspan="3" class="text-end">Tổng cộng:</th>
                                        <th class="text-end text-primary fs-5">@Model.Total.ToString("N0") ₫</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <!-- Order Status -->
                    <div class="mb-4">
                        <h6 class="text-muted">Trạng thái đơn hàng</h6>
                        <p class="fw-bold">
                            @if (Model.OrderStatus == "Processing")
                            {
                                <span class="badge bg-primary">Đang xử lý</span>
                            }
                            else if (Model.OrderStatus == "Shipped")
                            {
                                <span class="badge bg-info">Đã giao hàng</span>
                            }
                            else if (Model.OrderStatus == "Delivered")
                            {
                                <span class="badge bg-success">Đã giao</span>
                            }
                            else if (Model.OrderStatus == "Cancelled")
                            {
                                <span class="badge bg-danger">Đã hủy</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.OrderStatus</span>
                            }
                        </p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary me-md-2">
                            <i class="fas fa-home me-2"></i>Về trang chủ
                        </a>
                        <a asp-action="Index" asp-controller="Products" class="btn btn-primary">
                            <i class="fas fa-shopping-bag me-2"></i>Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
