@model Bookstore.ViewModels.OrderConfirmationViewModel
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Card -->
            <div class="card shadow-sm border-0 text-center mb-4">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 100px; height: 100px;">
                            <i class="bi bi-check-lg text-success" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold text-success mb-3">Đặt hàng thành công!</h2>
                    <p class="text-muted mb-4">
                        Cảm ơn bạn đã mua sắm tại <strong>Siêu thị sách mini</strong>.<br>
                        Đơn hàng của bạn đã được tiếp nhận và đang được xử lý.
                    </p>
                    <div class="d-inline-block bg-light rounded-3 px-4 py-3">
                        <small class="text-muted d-block">Mã đơn hàng</small>
                        <span class="fw-bold fs-4 text-primary">@Model.OrderNumber</span>
                    </div>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-receipt text-primary me-2"></i>Chi tiết đơn hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-calendar text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Ngày đặt hàng</small>
                                    <span class="fw-semibold">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-wallet2 text-success"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Phương thức thanh toán</small>
                                    <span class="fw-semibold">
                                        @if (Model.PaymentMethod == "COD")
                                        {
                                            <text>Thanh toán khi nhận hàng</text>
                                        }
                                        else if (Model.PaymentMethod == "Stripe")
                                        {
                                            <text>Thanh toán online</text>
                                        }
                                        else
                                        {
                                            @Model.PaymentMethod
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-credit-card text-info"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Trạng thái thanh toán</small>
                                    @if (Model.PaymentStatus == "Paid" || Model.PaymentStatus == "Completed")
                                    {
                                        <span class="badge bg-success">Đã thanh toán</span>
                                    }
                                    else if (Model.PaymentStatus == "COD")
                                    {
                                        <span class="badge bg-warning text-dark">Chờ thanh toán khi nhận hàng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.PaymentStatus</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-currency-dollar text-warning"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Tổng tiền</small>
                                    <span class="fw-bold fs-5 text-primary">@Model.Total.ToString("N0")₫</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Shipping Info -->
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-geo-alt text-primary me-2"></i>Địa chỉ giao hàng
                    </h6>
                    <div class="bg-light rounded-3 p-3">
                        <p class="mb-1"><strong>@Model.ShippingName</strong></p>
                        <p class="mb-1"><i class="bi bi-telephone me-2"></i>@Model.ShippingPhone</p>
                        <p class="mb-1"><i class="bi bi-envelope me-2"></i>@Model.ShippingEmail</p>
                        <p class="mb-0"><i class="bi bi-geo me-2"></i>@Model.ShippingAddress</p>
                    </div>

                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                    {
                        <hr class="my-4">
                        <h6 class="fw-bold mb-3">
                            <i class="bi bi-bag text-primary me-2"></i>Sản phẩm đã đặt
                        </h6>
                        @foreach (var item in Model.OrderItems)
                        {
                            <div class="d-flex align-items-center py-3 border-bottom">
                                <img src="@(item.ProductImageUrl ?? Url.Content("~/images/no-image.svg"))" 
                                     alt="@item.ProductTitle" class="rounded me-3"
                                     style="width: 60px; height: 60px; object-fit: cover;">
                                <div class="flex-grow-1">
                                    <h6 class="mb-0">@item.ProductTitle</h6>
                                    <small class="text-muted">SL: @item.Quantity × @item.UnitPrice.ToString("N0")₫</small>
                                </div>
                                <span class="fw-bold">@item.Total.ToString("N0")₫</span>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-primary btn-lg">
                    <i class="bi bi-eye me-2"></i>Xem chi tiết đơn hàng
                </a>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                </a>
            </div>
        </div>
    </div>
</div>
