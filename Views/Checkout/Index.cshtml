@model Bookstore.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">
            <i class="bi bi-credit-card text-primary me-2"></i>Thanh toán
        </h2>
        <p class="text-muted mb-0">Hoàn tất đơn hàng của bạn</p>
    </div>

    <div class="row">
        <!-- Checkout Form -->
        <div class="col-lg-8 mb-4">
            <form asp-action="ProcessOrder" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                
                <!-- Shipping Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-truck text-primary me-2"></i>Thông tin giao hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ShippingName" class="form-label">
                                    <i class="bi bi-person me-1"></i>Họ và tên
                                </label>
                                <input asp-for="ShippingName" class="form-control" placeholder="Nhập họ và tên" required />
                                <span asp-validation-for="ShippingName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShippingPhone" class="form-label">
                                    <i class="bi bi-telephone me-1"></i>Số điện thoại
                                </label>
                                <input asp-for="ShippingPhone" class="form-control" placeholder="Nhập số điện thoại" required />
                                <span asp-validation-for="ShippingPhone" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ShippingEmail" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email
                                </label>
                                <input asp-for="ShippingEmail" class="form-control" placeholder="Nhập địa chỉ email" required />
                                <span asp-validation-for="ShippingEmail" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ShippingAddress" class="form-label">
                                    <i class="bi bi-geo-alt me-1"></i>Địa chỉ giao hàng
                                </label>
                                <textarea asp-for="ShippingAddress" class="form-control" rows="3" 
                                          placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành phố" required></textarea>
                                <span asp-validation-for="ShippingAddress" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-wallet2 text-primary me-2"></i>Phương thức thanh toán
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="payment-option p-3 border rounded h-100" onclick="selectPayment('COD', this)">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="COD" id="cod" checked />
                                        <label class="form-check-label w-100" for="cod">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-cash-stack fs-3 text-success me-3"></i>
                                                <div>
                                                    <strong class="d-block">Thanh toán khi nhận hàng (COD)</strong>
                                                    <small class="text-muted">Thanh toán bằng tiền mặt khi nhận được hàng</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="payment-option p-3 border rounded h-100" onclick="selectPayment('Stripe', this)">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="Stripe" id="stripe" />
                                        <label class="form-check-label w-100" for="stripe">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-credit-card-2-front fs-3 text-primary me-3"></i>
                                                <div>
                                                    <strong class="d-block">Thanh toán online (Stripe)</strong>
                                                    <small class="text-muted">Thanh toán an toàn qua thẻ tín dụng/ghi nợ</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Order Notes -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-chat-left-text text-primary me-2"></i>Ghi chú đơn hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Ghi chú thêm cho đơn hàng (ví dụ: thời gian giao hàng, yêu cầu đặc biệt...)"></textarea>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <a asp-action="Index" asp-controller="Cart" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Quay lại giỏ hàng
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle me-2"></i>Xác nhận đặt hàng
                    </button>
                </div>
            </form>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card shadow-sm cart-summary">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-bag-check me-2"></i>Đơn hàng của bạn
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.CartItems.Any())
                    {
                        <div class="order-items mb-3">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="d-flex mb-3 pb-3 border-bottom">
                                    <img src="@item.ProductImageUrl" alt="@item.ProductTitle" 
                                         class="rounded me-3" 
                                         style="width: 60px; height: 60px; object-fit: cover;">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 small">@item.ProductTitle</h6>
                                        <small class="text-muted">SL: @item.Quantity</small>
                                        <div class="fw-bold text-primary">@item.Total.ToString("N0")₫</div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="summary-totals">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Tạm tính</span>
                                <span>@Model.Subtotal.ToString("N0")₫</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Phí vận chuyển</span>
                                @if (Model.ShippingCost == 0)
                                {
                                    <span class="text-success fw-bold">Miễn phí</span>
                                }
                                else
                                {
                                    <span>@Model.ShippingCost.ToString("N0")₫</span>
                                }
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <span class="fw-bold fs-5">Tổng cộng</span>
                                <span class="fw-bold fs-5 text-primary">@Model.Total.ToString("N0")₫</span>
                            </div>
                        </div>

                        <!-- Trust Badges -->
                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex align-items-center text-muted small mb-2">
                                <i class="bi bi-shield-check text-success me-2"></i>
                                Thanh toán an toàn & bảo mật
                            </div>
                            <div class="d-flex align-items-center text-muted small mb-2">
                                <i class="bi bi-truck text-primary me-2"></i>
                                Giao hàng toàn quốc
                            </div>
                            <div class="d-flex align-items-center text-muted small">
                                <i class="bi bi-arrow-repeat text-warning me-2"></i>
                                Đổi trả trong 7 ngày
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-cart-x fs-1 text-muted"></i>
                            <p class="text-muted mt-2">Giỏ hàng trống</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function selectPayment(value, element) {
            // Remove selected class from all options
            document.querySelectorAll('.payment-option').forEach(opt => {
                opt.classList.remove('selected', 'border-primary');
            });
            // Add selected class to clicked option
            element.classList.add('selected', 'border-primary');
            // Check the radio button
            element.querySelector('input[type="radio"]').checked = true;
        }

        // Initialize - mark the checked option as selected
        document.addEventListener('DOMContentLoaded', function() {
            const checked = document.querySelector('.payment-option input[type="radio"]:checked');
            if (checked) {
                checked.closest('.payment-option').classList.add('selected', 'border-primary');
            }
        });

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}

