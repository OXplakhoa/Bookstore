@model Bookstore.ViewModels.ProductCardViewModel

@{
    var product = Model.Product;
    var mainImage = product?.ProductImages?.FirstOrDefault(i => i.IsMain) ?? product?.ProductImages?.FirstOrDefault();
    var imageUrl = mainImage?.ImageUrl ?? Url.Content("~/images/no-image.svg");
    var heartClasses = Model.IsFavorited ? "fa-solid fa-heart text-danger" : "fa-regular fa-heart";
    var heartTitle = Model.IsFavorited ? "Remove from Favorites" : "Add to Favorites";
}

<div class="card h-100">
    <a asp-controller="Products" asp-action="Details" asp-route-id="@product?.ProductId">
        <img src="@imageUrl" class="card-img-top" style="height:220px; object-fit:cover;" alt="@product?.Title" />
    </a>
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="card-title mb-0">@product?.Title</h6>
            <button type="button"
                    class="btn btn-link p-0 favorite-toggle"
                    data-product-id="@product?.ProductId"
                    title="@heartTitle"
                    aria-label="@heartTitle">
                <i class="@heartClasses"></i>
            </button>
        </div>
        <p class="text-muted small mb-1">@product?.Author</p>
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <strong class="text-primary">@product?.Price.ToString("N0")â‚«</strong>
                <a class="btn btn-sm btn-outline-primary" asp-controller="Products" asp-action="Details" asp-route-id="@product?.ProductId">Xem</a>
            </div>
        </div>
    </div>
</div>
