@model IEnumerable<Bookstore.ViewModels.OrderSummaryViewModel>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-bag-check text-primary me-2"></i>Đơn hàng của tôi
            </h2>
            <p class="text-muted mb-0">Theo dõi và quản lý các đơn hàng của bạn</p>
        </div>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Mua thêm sách
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card order-card h-100 shadow-sm">
                        <div class="order-header">
                            <span class="order-number">#@order.OrderNumber</span>
                            <small class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@order.FirstProductImage" alt="Sản phẩm" class="rounded me-3" 
                                     style="width: 60px; height: 60px; object-fit: cover;">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@order.ItemCount sản phẩm</h6>
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@order.OrderDate.ToString("HH:mm")
                                    </small>
                                </div>
                            </div>
                            
                            <div class="border-top border-bottom py-3 mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Tổng tiền</span>
                                    <span class="fw-bold text-primary fs-5">@order.Total.ToString("N0")₫</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Thanh toán</span>
                                    <span>
                                        @if (order.PaymentMethod == "COD")
                                        {
                                            <i class="bi bi-cash-stack text-success me-1"></i><text>COD</text>
                                        }
                                        else if (order.PaymentMethod == "Stripe")
                                        {
                                            <i class="bi bi-credit-card text-primary me-1"></i><text>Online</text>
                                        }
                                        else
                                        {
                                            @order.PaymentMethod
                                        }
                                    </span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted small">Trạng thái đơn hàng</span>
                                @{
                                    var statusClass = order.OrderStatus switch
                                    {
                                        "Processing" => "processing",
                                        "Shipped" => "shipped",
                                        "Delivered" => "delivered",
                                        "Cancelled" => "cancelled",
                                        _ => "pending"
                                    };
                                    var statusText = order.OrderStatus switch
                                    {
                                        "Processing" => "Đang xử lý",
                                        "Shipped" => "Đang giao hàng",
                                        "Delivered" => "Đã giao",
                                        "Cancelled" => "Đã hủy",
                                        _ => "Chờ xử lý"
                                    };
                                }
                                <span class="order-status @statusClass">@statusText</span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Trạng thái thanh toán</span>
                                @if (order.PaymentStatus == "Paid" || order.PaymentStatus == "Completed")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Đã thanh toán
                                    </span>
                                }
                                else if (order.PaymentStatus == "COD")
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock me-1"></i>Chờ thanh toán
                                    </span>
                                }
                                else if (order.PaymentStatus == "Failed")
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Thất bại
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.PaymentStatus</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-outline-primary w-100">
                                <i class="bi bi-eye me-2"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state card shadow-sm">
            <div class="card-body py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-bag-x"></i>
                </div>
                <h4 class="empty-state-title">Chưa có đơn hàng nào</h4>
                <p class="empty-state-text">Bạn chưa có đơn hàng nào. Hãy bắt đầu mua sắm ngay!</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-book me-2"></i>Khám phá sách
                </a>
            </div>
        </div>
    }
</div>
