}

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-book text-primary me-2"></i>Danh s√°ch s√°ch
            </h2>
            <p class="text-muted mb-0">Kh√°m ph√° kho t√†ng tri th·ª©c c√πng ch√∫ng t√¥i</p>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar - Categories -->
        <div class="col-lg-3 mb-4">
            <div class="categories-sidebar">
                <h5 class="categories-title">
                    <i class="bi bi-tags me-2"></i>Danh m·ª•c
                </h5>
                <div class="list-group category-list">
                    <a asp-action="Index" asp-route-categoryId="" asp-route-search="@Model.Search"
                        class="list-group-item list-group-item-action @(Model.CategoryId == null ? "active" : "")">
                        <i class="bi bi-grid me-2"></i> T·∫•t c·∫£
                    </a>
                    @if (Model.Categories != null)
                    {
                        @foreach (var cat in Model.Categories)
                        {
                            <a asp-action="Index" asp-route-categoryId="@cat.CategoryId" asp-route-search="@Model.Search"
                                class="list-group-item list-group-item-action @(Model.CategoryId == cat.CategoryId ? "active" : "")">
                                <i class="bi bi-bookmark me-2"></i> @cat.Name
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Search & Filter Bar -->
            <div class="search-filter-bar">
                <form method="get" asp-action="Index">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input type="text" name="search" value="@Model.Search" 
                                       class="form-control border-start-0 search-input"
                                       placeholder="T√¨m t√™n s√°ch, t√°c gi·∫£..." />
                            </div>
                        </div>
                        <input type="hidden" name="categoryId" value="@(Model.CategoryId ?? 0)" />
                        <div class="col-md-4">
                            <select name="sort" class="form-select">
                                <option value="newest" selected="@(Model.Sort == "newest")">
                                    üïê M·ªõi nh·∫•t
                                </option>
                                <option value="price_asc" selected="@(Model.Sort == "price_asc")">
                                    üí∞ Gi√°: th·∫•p ‚Üí cao
                                </option>
                                <option value="price_desc" selected="@(Model.Sort == "price_desc")">
                                    üíé Gi√°: cao ‚Üí th·∫•p
                                </option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100">
                                <i class="bi bi-search me-1"></i> T√¨m
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Products Grid -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                @if (Model.Products != null && Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        Model.FlashSales.TryGetValue(product.ProductId, out var flashSale);
                        var cardModel = new Bookstore.ViewModels.ProductCardViewModel
                        {
                            Product = product,
                            IsFavorited = Model.FavoriteProductIds.Contains(product.ProductId),
                            IsRecentlyViewed = Model.RecentlyViewedProductIds.Contains(product.ProductId),
                            FlashSale = flashSale
                        };
                        <div class="col">
                            @await Html.PartialAsync("_ProductCard", cardModel)
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="bi bi-book"></i>
                            </div>
                            <h4 class="empty-state-title">Kh√¥ng t√¨m th·∫•y s√°ch</h4>
                            <p class="empty-state-text">Th·ª≠ t√¨m ki·∫øm v·ªõi t·ª´ kh√≥a kh√°c ho·∫∑c xem t·∫•t c·∫£ s√°ch</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-arrow-left me-2"></i> Xem t·∫•t c·∫£ s√°ch
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.Products != null && Model.Products.TotalPages > 1)
            {
                <nav aria-label="Ph√¢n trang" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.Products.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.Products.PageIndex - 1)"
                                asp-route-search="@Model.Search" asp-route-categoryId="@(Model.CategoryId ?? 0)"
                                asp-route-sort="@Model.Sort">
                                <i class="bi bi-chevron-left"></i> Tr∆∞·ªõc
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.Products.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Products.PageIndex == i ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@Model.Search"
                                    asp-route-categoryId="@(Model.CategoryId ?? 0)" asp-route-sort="@Model.Sort">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Products.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.Products.PageIndex + 1)"
                                asp-route-search="@Model.Search" asp-route-categoryId="@(Model.CategoryId ?? 0)"
                                asp-route-sort="@Model.Sort">
                                Sau <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>