@using Bookstore.ViewModels
@model ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Product?.Title ?? "Chi ti·∫øt s√°ch";
    string imageUrl = Url.Content("~/images/no-image.svg");
    var hasFlashSale = Model.FlashSale != null;
    var effectivePrice = hasFlashSale ? Model.FlashSale!.SalePrice : Model.Product?.Price ?? 0;

    if (Model.Product != null)
    {
        var mainImage = Model.Product.ProductImages?.FirstOrDefault(i => i.IsMain) ?? Model.Product.ProductImages?.FirstOrDefault();
        imageUrl = mainImage?.ImageUrl ?? Url.Content("~/images/no-image.svg"); 
    }

    var totalStock = Model.Product?.Stock ?? 0;
    int? flashRemaining = null;
    if (hasFlashSale && Model.FlashSale!.StockLimit.HasValue)
    {
        flashRemaining = Math.Max(0, Model.FlashSale.StockLimit.Value - Model.FlashSale.SoldCount);
    }
    var availableToSell = (hasFlashSale && flashRemaining.HasValue) 
        ? Math.Min(totalStock, flashRemaining.Value) 
        : totalStock;
    var isInStock = availableToSell > 0;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang ch·ªß</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">S√°ch</a></li>
            @if (Model.Product?.Category != null)
            {
                <li class="breadcrumb-item">
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.Product.Category.CategoryId">
                        @Model.Product.Category.Name
                    </a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Product?.Title</li>
        </ol>
    </nav>

    @if (hasFlashSale)
    {
        <div class="flash-sale-banner mb-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h4 class="mb-1">
                        <i class="bi bi-lightning-charge-fill me-2"></i>
                        ‚ö° FLASH SALE - Gi·∫£m @Model.FlashSale!.DiscountPercentage.ToString("F0")%
                    </h4>
                    <p class="mb-0 opacity-90">Ti·∫øt ki·ªám @((Model.Product!.Price - Model.FlashSale.SalePrice).ToString("N0"))‚Ç´</p>
                </div>
                <div class="text-end">
                    <div class="countdown-timer">
                        <i class="bi bi-clock me-1"></i>
                        <span data-countdown-end="@Model.FlashSale.FlashSale!.EndDate.ToString("o")">ƒêang t·∫£i...</span>
                    </div>
                    @if (Model.FlashSale.StockLimit.HasValue)
                    {
                        var remaining = Model.FlashSale.StockLimit.Value - Model.FlashSale.SoldCount;
                        var percentage = (double)remaining / Model.FlashSale.StockLimit.Value * 100;
                        <div class="mt-2">
                            <small>Ch·ªâ c√≤n <strong>@remaining</strong> s·∫£n ph·∫©m v·ªõi gi√° Flash Sale</small>
                            <div class="progress mt-1" style="height: 6px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="row">
        <!-- Product Image -->
        <div class="col-lg-5 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="@imageUrl" class="card-img-top main-product-image" 
                     alt="@(Model.Product?.Title ?? "S√°ch")" 
                     style="object-fit: cover; height: 450px;" />
            </div>

            @if (Model.Product?.ProductImages != null && Model.Product.ProductImages.Count() > 1)
            {
                <div class="mt-3 d-flex gap-2 flex-wrap">
                    @foreach (var img in Model.Product.ProductImages.Take(5))
                    {
                        <img src="@img.ImageUrl" 
                             class="rounded border" 
                             style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; transition: all 0.2s;" 
                             onclick="document.querySelector('.main-product-image').src='@img.ImageUrl'; this.classList.add('border-primary');" 
                             onmouseenter="this.style.transform='scale(1.05)'" 
                             onmouseleave="this.style.transform='scale(1)'" />
                    }
                </div>
            }
        </div>

        <!-- Product Info -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            @if (Model.Product?.Category != null)
                            {
                                <span class="badge bg-secondary mb-2">@Model.Product.Category.Name</span>
                            }
                            <h2 class="fw-bold mb-0">@(Model.Product?.Title ?? "Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m")</h2>
                        </div>
                        <button type="button"
                                class="btn btn-outline-danger btn-icon favorite-toggle"
                                data-product-id="@Model.Product?.ProductId"
                                title="@(Model.IsFavorited ? "B·ªè y√™u th√≠ch" : "Th√™m v√†o y√™u th√≠ch")">
                            <i class="@(Model.IsFavorited ? "bi bi-heart-fill" : "bi bi-heart") fs-5"></i>
                        </button>
                    </div>
                    
                    <p class="text-muted mb-4">
                        <i class="bi bi-person me-2"></i> T√°c gi·∫£: <strong>@(Model.Product?.Author ?? "Kh√¥ng r√µ")</strong>
                    </p>

                    <!-- Price Section -->
                    <div class="price-section p-3 rounded mb-4">
                        @if (hasFlashSale)
                        {
                            <div class="d-flex align-items-baseline gap-3 flex-wrap">
                                <span class="product-price" style="font-size: 2rem;">@effectivePrice.ToString("N0")‚Ç´</span>
                                <span class="product-price-old fs-5">@Model.Product?.Price.ToString("N0")‚Ç´</span>
                                <span class="badge bg-danger fs-6">-@Model.FlashSale!.DiscountPercentage.ToString("F0")%</span>
                            </div>
                        }
                        else
                        {
                            <span class="product-price" style="font-size: 2rem;">@(Model.Product?.Price.ToString("N0") ?? "0")‚Ç´</span>
                        }
                    </div>

                    <!-- Stock Status -->
                    <div class="mb-4">
                        <p class="mb-2">
                            <i class="bi bi-box-seam me-2"></i>
                            <strong>T√¨nh tr·∫°ng:</strong>
                            @if (isInStock)
                            {
                                <span class="text-success fw-bold">
                                    <i class="bi bi-check-circle me-1"></i> C√≤n h√†ng (@availableToSell)
                                </span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">
                                    <i class="bi bi-x-circle me-1"></i> H·∫øt h√†ng
                                </span>
                            }
                        </p>
                    </div>

                    @if (Model.Product != null && isInStock)
                    {
                        <!-- Quantity Selection -->
                        <div class="mb-4">
                            <label for="qty" class="form-label fw-bold">
                                <i class="bi bi-cart-plus me-2"></i>S·ªë l∆∞·ª£ng
                            </label>
                            <div class="d-flex align-items-center gap-3">
                                <div class="input-group" style="width: 150px;">
                                    <button class="btn btn-outline-secondary" type="button" onclick="changeQty(-1)">
                                        <i class="bi bi-dash"></i>
                                    </button>
                                    <input id="qty" class="form-control text-center" type="number" value="1" min="1" max="@availableToSell" />
                                    <button class="btn btn-outline-secondary" type="button" onclick="changeQty(1)">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </div>
                                <small class="text-muted">T·ªëi ƒëa: @availableToSell</small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 flex-wrap mb-4">
                            <button class="btn @(hasFlashSale ? "btn-danger" : "btn-primary") btn-lg flex-grow-1" 
                                    id="btnAddCart" 
                                    data-id="@Model.Product.ProductId"
                                    data-flash-sale-id="@Model.FlashSale?.FlashSaleProductId">
                                @if (hasFlashSale)
                                {
                                    <text>üî• Mua ngay - Flash Sale</text>
                                }
                                else
                                {
                                    <i class="bi bi-cart-plus me-2"></i>
                                    <text>Th√™m v√†o gi·ªè h√†ng</text>
                                }
                            </button>
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-cart3 me-2"></i> Xem gi·ªè h√†ng
                            </a>
                        </div>
                    }
                    else if (Model.Product == null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Kh√¥ng t√¨m th·∫•y th√¥ng tin s·∫£n ph·∫©m.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle me-2"></i>
                            S·∫£n ph·∫©m n√†y hi·ªán ƒë√£ h·∫øt h√†ng.
                        </div>
                    }

                    <!-- Product Details -->
                    @if (Model.Product != null)
                    {
                        <hr class="my-4">
                        <div>
                            <h5 class="fw-bold mb-3">
                                <i class="bi bi-file-text me-2"></i>M√¥ t·∫£ s·∫£n ph·∫©m
                            </h5>
                            <div class="text-muted">
                                @Html.Raw(Model.Product.Description ?? "Ch∆∞a c√≥ m√¥ t·∫£ cho s·∫£n ph·∫©m n√†y.")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
    {
        <section class="mt-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-collection me-2 text-primary"></i>S√°ch li√™n quan
                </h4>
            </div>
            <div class="row g-4">
                @foreach (var rp in Model.RelatedProducts.Take(4))
                {
                    <div class="col-6 col-md-3">
                        @await Html.PartialAsync("_ProductCard", rp)
                    </div>
                }
            </div>
        </section>
    }

    <!-- Recently Viewed -->
    @if (Model.RecentlyViewedProducts != null && Model.RecentlyViewedProducts.Any())
    {
        <section class="mt-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-clock-history me-2 text-primary"></i>ƒê√£ xem g·∫ßn ƒë√¢y
                </h4>
                <a asp-action="RecentlyViewed" class="btn btn-outline-primary btn-sm">
                    Xem t·∫•t c·∫£ <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var recent in Model.RecentlyViewedProducts.Take(4))
                {
                    <div class="col-6 col-md-3">
                        @await Html.PartialAsync("_ProductCard", recent)
                    </div>
                }
            </div>
        </section>
    }
</div>

@section Styles {
    <style>
        .price-section {
            background: linear-gradient(135deg, #fff3e0, #ffe0b2);
            border-left: 4px solid var(--primary);
        }
        
        .countdown-timer {
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
        }

        .btn-icon {
            width: 45px;
            height: 45px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

@section Scripts {
    <script>
        function changeQty(delta) {
            var input = document.getElementById('qty');
            var newVal = parseInt(input.value) + delta;
            var max = parseInt(input.max);
            if (newVal >= 1 && newVal <= max) {
                input.value = newVal;
            }
        }

        // Initialize countdown on page load
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof window.initFlashSaleCountdowns === 'function') {
                window.initFlashSaleCountdowns();
            }
        });
        
        // Listen for flash sale expiration
        document.addEventListener('flashsale:expired', function() {
            setTimeout(function() {
                location.reload();
            }, 2000);
        });
        
        // Add to cart with flash sale support
        document.getElementById('btnAddCart')?.addEventListener('click', async function () {
            var id = this.dataset.id;
            var flashSaleId = this.dataset.flashSaleId || null;
            var qty = document.getElementById('qty').value || 1;
            
            try {
                const resp = await fetch('/Cart/AddToCart', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json', 
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value 
                    },
                    body: JSON.stringify({ 
                        productId: id, 
                        quantity: qty,
                        flashSaleProductId: flashSaleId 
                    })
                });
                
                if (resp.ok) {
                    const data = await resp.json();
                    alert(data.message || 'ƒê√£ th√™m v√†o gi·ªè h√†ng th√†nh c√¥ng!');
                    if (typeof updateCartCount === 'function') {
                        updateCartCount();
                    }
                } else {
                    const data = await resp.json();
                    alert('L·ªói: ' + (data.message || 'Kh√¥ng th·ªÉ th√™m v√†o gi·ªè h√†ng'));
                }
            } catch (e) {
                alert('ƒê√£ x·∫£y ra l·ªói khi th√™m v√†o gi·ªè h√†ng');
            }
        });
    </script>
}
