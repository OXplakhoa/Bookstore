@using Bookstore.ViewModels
@model CartViewModel

@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-cart3 text-primary me-2"></i>Giỏ hàng của bạn
            </h2>
            <p class="text-muted mb-0">@Model.ItemCount sản phẩm trong giỏ hàng</p>
        </div>
        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
        </a>
    </div>
    
    @if (Model.CartItems.Any())
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <div class="row text-muted small fw-bold">
                            <div class="col-md-6">Sản phẩm</div>
                            <div class="col-md-2 text-center">Đơn giá</div>
                            <div class="col-md-2 text-center">Số lượng</div>
                            <div class="col-md-2 text-end">Thành tiền</div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model.CartItems)
                        {
                            var effectivePrice = item.LockedPrice ?? item.Product!.Price;
                            var lineTotal = effectivePrice * item.Quantity;
                            var originalLineTotal = item.Product!.Price * item.Quantity;
                            var hasFlash = item.LockedPrice.HasValue;
                            var mainImage = item.Product?.ProductImages?.FirstOrDefault(i => i.IsMain) ?? 
                                          item.Product?.ProductImages?.FirstOrDefault();
                            var imageUrl = mainImage?.ImageUrl ?? Url.Content("~/images/no-image.svg");

                            <div class="cart-item p-3 border-bottom">
                                <div class="row align-items-center">
                                    <!-- Product Info -->
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product?.ProductId">
                                                <img src="@imageUrl" class="cart-item-image rounded me-3" 
                                                     style="width: 80px; height: 80px; object-fit: cover;" 
                                                     alt="@item.Product?.Title" />
                                            </a>
                                            <div>
                                                <h6 class="mb-1">
                                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product?.ProductId"
                                                       class="text-decoration-none text-dark">
                                                        @item.Product?.Title
                                                    </a>
                                                </h6>
                                                <small class="text-muted">
                                                    <i class="bi bi-person me-1"></i>@item.Product?.Author
                                                </small>
                                                @if (hasFlash)
                                                {
                                                    <div class="mt-1">
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-lightning-charge-fill me-1"></i>Flash Sale
                                                        </span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Unit Price -->
                                    <div class="col-md-2 text-center">
                                        @if (hasFlash)
                                        {
                                            <div class="product-price-old small">@item.Product!.Price.ToString("N0")₫</div>
                                            <div class="product-price">@item.LockedPrice!.Value.ToString("N0")₫</div>
                                        }
                                        else
                                        {
                                            <span class="fw-semibold">@item.Product!.Price.ToString("N0")₫</span>
                                        }
                                    </div>

                                    <!-- Quantity -->
                                    <div class="col-md-2 text-center">
                                        <div class="d-inline-flex align-items-center">
                                            <button class="quantity-btn" type="button" 
                                                    onclick="updateQuantity(@item.CartItemId, @(item.Quantity - 1))">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <input type="number" class="quantity-input" 
                                                   value="@item.Quantity" min="1" max="@item.Product?.Stock"
                                                   onchange="updateQuantity(@item.CartItemId, this.value)" />
                                            <button class="quantity-btn" type="button" 
                                                    onclick="updateQuantity(@item.CartItemId, @(item.Quantity + 1))">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Line Total -->
                                    <div class="col-md-2 text-end">
                                        @if (hasFlash)
                                        {
                                            <div class="product-price-old small">@originalLineTotal.ToString("N0")₫</div>
                                        }
                                        <div class="product-price">@lineTotal.ToString("N0")₫</div>
                                        <button class="btn btn-link text-danger p-0 mt-1 small" 
                                                onclick="removeFromCart(@item.CartItemId)">
                                            <i class="bi bi-trash me-1"></i>Xóa
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm cart-summary">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-receipt me-2"></i>Tóm tắt đơn hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Tạm tính (@Model.ItemCount sản phẩm)</span>
                            <span class="fw-semibold">@Model.TotalPrice.ToString("N0")₫</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Phí vận chuyển</span>
                            <span class="text-success fw-semibold">Miễn phí</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fw-bold fs-5">Tổng cộng</span>
                            <span class="fw-bold fs-5 text-primary">@Model.TotalPrice.ToString("N0")₫</span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="bi bi-credit-card me-2"></i>Tiến hành thanh toán
                            </a>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                            </a>
                        </div>

                        <!-- Trust Badges -->
                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex justify-content-around text-center text-muted small">
                                <div>
                                    <i class="bi bi-shield-check fs-5 d-block mb-1 text-success"></i>
                                    An toàn
                                </div>
                                <div>
                                    <i class="bi bi-truck fs-5 d-block mb-1 text-primary"></i>
                                    Giao nhanh
                                </div>
                                <div>
                                    <i class="bi bi-arrow-repeat fs-5 d-block mb-1 text-warning"></i>
                                    Đổi trả
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state card shadow-sm">
            <div class="card-body py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-cart-x"></i>
                </div>
                <h4 class="empty-state-title">Giỏ hàng trống</h4>
                <p class="empty-state-text">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-book me-2"></i>Khám phá sách ngay
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(cartItemId, quantity) {
            if (quantity < 1) return;
            
            fetch('/Cart/UpdateQuantity', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: `cartItemId=${cartItemId}&quantity=${quantity}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi cập nhật giỏ hàng');
            });
        }

        function removeFromCart(cartItemId) {
            if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')) {
                fetch('/Cart/RemoveFromCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: `cartItemId=${cartItemId}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Lỗi: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa sản phẩm');
                });
            }
        }
    </script>
}
